{#
/**
 * Available variables:
 * - heading_level - the header level 1-6 (produces h1, h2, etc.)
 *
 * - heading - the content of the heading (typically text)
 *
 * - heading_url - (optional) the url the heading should poing to
 * - heading_link_attributes - key/value attributes to pass to link
 */
#}

{% set font_size = 'text-base' %}
{% set font_weight = 'font-normal' %}
{% set margin_bottom = "mb-8" %}

{% if heading_level == 1 %}
  {% set font_size = 'text-5xl' %}
  {% set font_weight = 'font-black' %}
{% elseif heading_level == 2 %}
  {% set font_size = 'text-4xl' %}
  {% set font_weight = 'font-extrabold' %}
{% elseif heading_level == 3 %}
  {% set font_size = 'text-3xl' %}
  {% set font_weight = 'font-extrabold' %}
{% elseif heading_level == 4 %}
  {% set font_size = 'text-2xl' %}
  {% set font_weight = 'font-bold' %}
{% elseif heading_level == 5 %}
  {% set font_size = 'text-xl' %}
  {% set font_weight = 'font-bold' %}
{% elseif heading_level == 6 %}
  {% set font_size = 'text-xl' %}
  {% set font_weight = 'font-semibold' %}
{% else %}
  {% set font_size = 'text-base' %}
  {% set font_weight = 'font-normal' %}
{% endif %}

<h{{ heading_level }} class="{{ font_size }} {{ font_weight }} {{ margin_bottom }}">
  {% if heading_url %}
    {% include "@atoms/links/link/link.twig" with {
      "link_content": heading,
      "link_url": heading_url,
      "link_attributes": heading_link_attributes,
    } %}
  {% else %}
    {{ heading }}
  {% endif %}
</h{{ heading_level }}>
